<h1>Bitácora</h1>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Tipo de movimiento</th>
      <th>¿Tema o concepto?</th>
      <th>Nombre</th>
      <th>Fecha y hora del movimiento</th>
      <th>Usuario que lo realizo</th>
    </tr>
    </thead>

    <tbody>
    <% @records.each do |record| %>
        <tr>
          <td><%= record.action %></td>
          <td><%= record.input %></td>
          <td><%= record.name_input %></td>
          <td><%= record.updated_at %></td>
          <td><%= record.user_name %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Regresar', subjects_path , class: 'btn btn-primary' %>